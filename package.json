{
  "name": "penguin-basecamp-report",
  "version": "1.0.0",
  "description": "A basic report to catch Z-peeps Penguins",
  "authors": [
    "Andres Garcia <andres@zemoga.com>"
  ],
  "engines": {
    "node": ">=6"
  },
  "main": "build/index.js",
  "scripts": {
    "build": "babel source/ -d build/ -s",
    "debug": "npm run build && env $(cat .env-local | xargs) node --inspect --debug-brk build",
    "start": "per-env",
    "start:development": "babel -w source/ -d build/ -s & env $(cat .env-local | xargs) nodemon build",
    "package": "npm run package:prepare && npm run package:node && npm run package:web && npm run package:combine",
    "package:prepare": "npm prune --production",
    "package:combine": "zip -qr ./penguin-report_`date +%y.%m.%d`.zip node.zip web.zip && rm -rf ./node.zip ./web.zip",
    "package:node": "zip -r ./node.zip node_modules .env package.json build",
    "package:web": "cd web; zip -qr ../web.zip .; cd ..",
    "postinstall": "per-env",
    "postinstall:development": "npm run build",
    "postinstall:production": "echo 'Prod!'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oagarcia/penguin-report"
  },
  "bugs": {
    "url": "https://github.com/oagarcia/penguin-report/issues"
  },
  "keywords": [
    "Basecamp,zemoga"
  ],
  "author": "Andres Garcia",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.4.6",
    "cheerio": "^0.22.0",
    "express": "~4.15.2",
    "lodash": "^4.17.4",
    "mongodb": "^2.2.25",
    "per-env": "~1.0.2",
    "request": "^2.69.0",
    "request-promise": "^4.1.1",
    "xml2js": "^0.4.17"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-eslint": "^7.1.1",
    "babel-plugin-lodash": "^2.0.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "csslint": "^1.0.5",
    "eslint": "^3.17.1",
    "eslint-config-defaults": "^9.0.0",
    "nodemon": "^1.11.0"
  }
}
